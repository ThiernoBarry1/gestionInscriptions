
{% block _registration_auteurRealisateurs_entry_widget %}
      <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row my-3">
                    <div class="col-4">
                        <label> Prénom </label>
                        {{ form_row(form.prenom,{'label':false,'attr':{'class':'form-control-sm w-100','placeholder':'Prénom'}}) }}
                     </div>
                    <div class="col-4">
                        <label> Nom </label>
                         {{ form_row(form.nom,{'label':false,'attr':{'class':'form-control-sm w-100','placeholder':'Nom'}}) }}
                    </div>
                    <div class="col-4">
                       <label> Pseudonyme </label>
                       {{ form_row(form.pseudonyme,{'label':false,'attr':{'class':'form-control-sm w-100','placeholder':'Pseudonyme'}}) }}
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-6">
                        <label> Adresse</label>
                        {{ form_row(form.adresse,{'label':false,'attr':{'class':'form-control-sm w-100','placeholder':'adresse'}}) }}
                    </div>
                    <div class="col-3 ">
                        {{ form_row(form.codePostal,{'label':false,'attr':{'class':'form-control-sm w-100 decalageCodeVille','placeholder':'Code postal'}}) }}
                    </div>
                    <div class="col-3">
                        {{ form_row(form.ville,{'label':false,'attr':{'class':'form-control-sm w-100 decalageCodeVille','placeholder':'Ville'}}) }}
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-6">
                        <label>Téléphone</label>
                        {{ form_row(form.telephoneMobile,{'label':false,'attr':{'class':'form-control-sm w-100'}}) }}
                    </div>
                    <div class="col-6">
                        <label>Courriel</label>
                        {{ form_row(form.courriel,{'label':false,'attr':{'class':'form-control-sm w-100'}}) }}
                    </div>
                </div>
                <div class="form-group my-2 typePersonne">
                    <label for="typePersonne" class="my-3">Pour ce projet vous êtes ?</label>
                    {{ form_row(form.typePersonne,{'label':false,'attr':{'class':'typePersonne'}})}}
                 </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}"> Supprimer</button>
            </div>
        </div>
    </div>
{% endblock %}